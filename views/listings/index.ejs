<% layout("/layouts/boilerplate.ejs") %>

<style>
  .filter-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  #filters {
    display: flex;
    /* flex-wrap: wrap; */
    overflow-x: scroll;
    white-space: nowrap;
    scrollbar-width: none;
    width: 80%;
  }
  .filter {
    text-align: center;
    display: inline-block;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    /* border-bottom: 1px solid black; */
  }

  .filter p {
    font-size: 0.8rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid gray;
    padding: 0.5rem;
    border-radius: 0.5rem;
  }
  .tax-toggle:hover {
    border: 1px solid black;
  }
  .form-check-input,
  .form-check-label {
    cursor: pointer;
  }

  .search-container {
    display: none;
    margin-top: 15px;
  }

  .tax {
    display: none;
  }

  @media (max-width: 850px) {
    .search-container {
      display: block;
    }
    .tax {
      display: block;
    }
    .display-tax {
      display: none;
    }
    .tax-toggle {
      margin-left: 20px;
    }
  }
</style>
<body>
  <div class="search-container">
    <form class="d-flex" role="search">
      <input
        type="search"
        class="form-control me-2 search-inp"
        placeholder="Search distinaiton"
        aria-label="Search"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>
  </div>
  <div class="filter-container">
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-house-chimney-window"></i></div>
        <p>Cabins</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-key"></i></div>
        <p>New</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Island</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Lake</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-stroopwafel"></i></div>
        <p>Desert</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-web-awesome"></i></div>
        <p>Design</p>
      </div>
    </div>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          ><span class="display-tax">Display Tax</span>
          <span class="tax">Tax</span>
        </label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allLists) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 15rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b><br />
            $<%= listing.price %>
            <i class="tax-info">&nbsp; &nbsp; +18 GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    });
  </script>
</body>
